{
    "name": "cwd/grid-bundle",
    "description": "A Simple Table Grid Bundle",
    "type": "symfony-bundle",
    "keywords": ["bootstrap", "symfony", "grid", "table", "bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ludwig Ruderstaller",
            "email": "l.ruderstaller@cwd.at"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : "^7.4",
        "symfony/framework-bundle": "^4.0|^5.0",
        "symfony/options-resolver": "^4.0|^5.0",
        "symfony/twig-bundle": "^4.0|^5.0",
        "twig/twig": "^v3.1.0",	
        "pagerfanta/pagerfanta": "^2.4",
        "babdev/pagerfanta-bundle": "^2.7.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "@stable",
        "symfony/orm-pack": "*",
        "symfony/css-selector": "@stable"
    },
    "suggest": {
        "doctrine/orm": "For using DoctrineAdapter",
        "pagerfanta/doctrine-orm-adapter": "For using DoctrineAdapter",
        "symfony/translation": "For using Translations",
        "symfony/form": "Needed for using EntityType",
        "symfony/workflow": "Needed for using WorkflowActionType"
    },
    "autoload": {
        "psr-4": { "Cwd\\GridBundle\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cwd\\GridBundle\\Tests\\": "/Tests/"
        }
    }

}
