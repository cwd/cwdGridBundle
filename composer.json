{
    "name": "cwd/grid-bundle",
    "description": "A Simple Table Grid Bundle",
    "type": "symfony-bundle",
    "keywords": ["bootstrap", "symfony", "grid", "table", "bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ludwig Ruderstaller",
            "email": "l.ruderstaller@cwd.at"
        },
        {
            "name": "Niklas de Vries",
            "email": "n.devries@cwd.at"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=8.0",
        "symfony/framework-bundle": ">5.4",
        "symfony/options-resolver": ">5.4",
        "symfony/twig-bundle": ">5.4",
        "twig/twig": "^v3.1.0",	
        "pagerfanta/pagerfanta": ">3.6",
        "babdev/pagerfanta-bundle": ">3.6"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "@stable",
        "symfony/orm-pack": "*",
        "symfony/css-selector": "@stable",
        "phpstan/phpstan": "^1.5",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-symfony": "^1.1"
    },
    "suggest": {
        "doctrine/orm": "For using DoctrineAdapter",
        "pagerfanta/doctrine-orm-adapter": "For using DoctrineAdapter",
        "symfony/translation": "For using Translations",
        "symfony/form": "Needed for using EntityType",
        "symfony/workflow": "Needed for using WorkflowActionType"
    },
    "autoload": {
        "psr-4": { "Cwd\\GridBundle\\": "" },
        "exclude-from-classmap": [
            "/bundles/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cwd\\GridBundle\\Tests\\": "/bundles/Tests/"
        }
    }

}
